<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rental_iphone_murah_banget"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/rgIphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbIphone15ProMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 15 Pro Max" />

        <RadioButton
            android:id="@+id/rbIphone15Pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 15 Pro" />

        <RadioButton
            android:id="@+id/rbIphone14ProMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 14 Pro Max" />

        <RadioButton
            android:id="@+id/rbIphone14Pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 14 Pro" />

        <RadioButton
            android:id="@+id/rbIphone13ProMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 13 Pro Max" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahan barang"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgTambahan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbAirPods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Pods" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgTambahan2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbCasing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casing" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/etHariRental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Berapa hari rental"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnProses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proses (Pesan)"
        android:layout_marginTop="16dp"/>
</LinearLayout>